      @style/textAppearanceLargeBold
    </item>

    <item name="text_colour">@android:color/white</item>

    <item name="menu_refresh">@drawable/ic_refresh_black_24dp</item>
    <item name="menu_share">@drawable/ic_share_black_24dp</item>

  </style>

  <style name="ActionBarBaseStyle"
         parent="android:style/Widget.Material.ActionBar">
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="text_colour">@android:color/white</item>

    <item name="menu_refresh">@drawable/ic_refresh_white_24dp</item>
    <item name="menu_share">@drawable/ic_share_white_24dp</item>

    <item name="dialog_bgcolour">@color/dark_background</item>

    <item name="box_bgcolour">@color/dark_box_background</item>
    <item name="box_bdcolour">@color/dark_box_border</item>
    <item name="key_normal">@color/dark_key_normal</item>
