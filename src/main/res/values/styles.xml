<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Material">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>

    <item name="text_colour">@android:color/white</item>

    <item name="menu_refresh">@drawable/ic_refresh_white_24dp</item>
    <item name="menu_share">@drawable/ic_share_white_24dp</item>

  </style>

  <style name="AppLightBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>

    <item name="text_colour">@android:color/white</item>

    <item name="menu_refresh">@drawable/ic_refresh_white_24dp</item>
    <item name="menu_share">@drawable/ic_share_white_24dp</item>

  </style>

